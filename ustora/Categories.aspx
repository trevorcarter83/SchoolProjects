    <asp:SqlDataSource ID="sqlCategories" runat="server" ConnectionString="<%$ ConnectionStrings:Toys %>" SelectCommand="SELECT c.CategoryID, c.CategoryName, p.ImagePath
FROM Categories c JOIN Products p
ON c.CategoryID = p.CategoryID
AND p.ImagePath = (
SELECT TOP 1 pr.ImagePath
FROM Products pr
WHERE pr.CategoryID = c.CategoryID
ORDER BY UnitPrice DESC);"></asp:SqlDataSource>
